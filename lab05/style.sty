body {
  font: 24px Helvetica;
  background: #999999;
}
#main {
  min-height: 800px;
  margin: 0px;
  padding: 0px;
  display: flex;
  flex-flow: row;
}
#main > article {
  /*margin: 4px;*/
  padding-top: 20px;
  padding-left: 8px;
  padding-right: 8px;
  border: 2px solid #000;
  background: #dddd88;
  flex: 3 1 60%;
  order: 2;
}
#main > nav {
  padding-top: 20px;
  padding-left: 8px;
  padding-right: 8px;
  border: 2px solid #000;
  background: #ccccff;
  flex: 1 6 20%;
  order: 1;
  text-align: right;
}
#main > aside {
  padding-top: 20px;
  padding-left: 8px;
  padding-right: 8px;
  border: 2px solid #000;
  background: #ccccff;
  flex: 1 6 20%;
  order: 3;
}
header{
  display: block;
  padding: 5px;
  min-height: 100px;
  border: 2px solid #000;
  background: #ffeebb;
  line-height: 100px;
  font-size: 48px;
}
footer {
  display: block;
  padding: 10px;
  min-height: 100px;
  border: 2px solid #000;
  background: #ffeebb;
  line-height: 100px;
  font-size: 18px;
}
/* Too narrow to support three columns */
@media all and (max-width: 640px) {
  #main, #page {
    flex-direction: column;
  }

  #main > article, #main > nav, #main > aside {
    /* Return them to document order */
    order: 0;
  }

  #main > nav, #main > aside, header, footer {
    min-height: 50px;
    max-height: 50px;
    text-align: left;
  }
  header{
    line-height: 50px;
    font-size: 32px;
  }
  footer{
    line-height: 50px;
  }
  #main > nav {
    padding-top: 5px;
    order: -1;
    font-size: 20px;
  }
}
